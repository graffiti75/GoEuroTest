<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <!-- GoEuro TextVi0ew -->
    <TextView
        style="@style/GoEuroTextView"
    />

    <!-- Auto Complete Search Field -->
    <AutoCompleteTextView 
        android:id="@+id/id_origin_city_search"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/app_name"
	    android:drawableRight="@drawable/ic_search"
	    android:padding="20dp"
    	android:layout_marginTop="10dp"
	/>
    
    <!-- Second Auto Complete Search Field -->
    <AutoCompleteTextView 
        android:id="@+id/id_destiny_city_search"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:hint="@string/app_name"
	    android:drawableRight="@drawable/ic_search"
	    android:padding="20dp"
    	android:layout_marginTop="10dp"
	/>
    
    <!-- Date Picker -->
    <TextView
        android:id="@+id/id_date_picker"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#EDEDED"
	    android:textSize="22dp"
	    android:drawableRight="@drawable/ic_schedule"
	    android:padding="20dp"
    	android:layout_marginTop="10dp"
	/>

    <Button
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:drawableLeft="@drawable/ic_search"
	    android:padding="20dp"
	    android:text="@string/search"
	    android:onClick="notImplemented"
	    android:gravity="center"
    	android:layout_marginTop="10dp"
    />

</LinearLayout>